bindsym $mod+Escape kill
bindsym --to-code $mod+q kill
bindsym --to-code $mod+d exec $menu


bindsym $mod+Shift+Ctrl+c reload


bindsym --to-code {
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    #$mod+b splith
    #$mod+v splitv
    #$mod+g layout stacking
    #$mod+h layout tabbed
    $mod+j layout toggle split tabbed stacked
    $mod+Tab layout toggle split tabbed stacked
    $mod+f fullscreen
    $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    $mod+Ctrl+space focus mode_toggle

    $mod+Ctrl+p focus parent
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.
    # Move the currently focused window to the scratchpad
    $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    $mod+minus scratchpad show

}

# Special keys to adjust volume via PulseAudio
bindsym --locked XF86AudioRaiseVolume exec $scriptsDir/Volume.sh --inc #volume up
bindsym --locked XF86AudioLowerVolume exec $scriptsDir/Volume.sh --dec #volume down
bindsym --locked XF86AudioMicMute exec $scriptsDir/Volume.sh --toggle-mic #mute mic
bindsym --locked XF86AudioMute exec $scriptsDir/Volume.sh --toggle

# wl-kbptr
bindsym --to-code $mod+G exec wl-kbptr

# airpods
bindsym --to-code $mod+P exec bluetoothctl --timeout 15 -- connect C4:B3:49:8D:FD:D7

# printscreen
bindsym Print exec $scriptsDir/ScreenShot.sh --area

bindsym --locked $mod+Ctrl+F12 output * dpms off
bindsym --locked $mod+F12      output * dpms on

# vpn
bindsym --to-code $mod+k exec nmcli connection up WB

bindsym $mod+Return exec $term
bindsym --to-code $mod+T exec $files

bindsym --to-code $mod+ALT+R exec swaymsg reload
bindsym --to-code $mod+ALT+E exec $scriptsDir/RofiEmoji.sh
bindsym --to-code $mod+S exec $scriptsDir/RofiSearch.sh

bindsym --to-code $mod+B exec killall -SIGUSR1 waybar
bindsym --to-code $mod+CTRL+B exec $scriptsDir/WaybarStyles.sh
bindsym --to-code $mod+ALT+B exec $scriptsDir/WaybarLayout.sh

bindsym --locked XF86MonBrightnessDown exec $scriptsDir/Brightness.sh --dec 
bindsym --locked XF86MonBrightnessUp exec $scriptsDir/Brightness.sh --inc
